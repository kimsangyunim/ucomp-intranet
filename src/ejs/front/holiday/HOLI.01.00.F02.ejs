	document.addEventListener('DOMContentLoaded', function() {
		const datepicker = new AirDatepicker('#datepickerInline', {
			inline: true,
			multipleDates: true,
			firstDay: 0,
			locale: {
				days: ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
